<%- include("partials/app_header"); -%>

<div class="container">
    <div class="row">
        <div class="col-6 offset-3">
            <div class="card mt-2">
                <div class="card-header text-center">
                    <h3>User id <%= sender.username %> claims to have found your item</h3>
                </div>
                <div class="card-body">
                    <% let type=message.img.content; %>
                    <% let data=message.img.data; %>
                    <div class="row">
                        <div class="col-3">
                            <img src="data:image/<%=type %>;base64,<%= data.toString('base64') %>" class="img-fluid img-thumbnail">
                        </div>
                        <div class="col-9">
                            <p><%= message.description %></p>
                        </div>
                    </div>

                    <form action="/users/dashboard/report/<%= message._id %>/verify" method="POST">
                        <div class="row mt-2">
                            <div class="col-3 offset-3">
                                <button class="btn btn-primary" type="submit" name="verify" value="<%= message.item_id %>">Verify</button>
                            </div>
                            <div class="col-3">
                                <button class="btn" data-bs-toggle="modal" data-bs-target="#Modal">Invalid</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="Modal" tabindex="-1" aria-hidden="true" aria-labelledby="title">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="title">Invalid</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="close"></button>
            </div>
            <div class="modal-body">
                <div class="container">
                    <div class="row">
                        <div class="col-12">
                            <p>Do you want to delete the finders claim?</p>
                        </div>
                    </div>
                    <form action="/users/dashboard" method="POST">
                        <div class="row mt-4">
                            <div class="col-12 text-center">
                                <button class="btn btn-primary" type="submit" name="button" value="yes">Yes</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include("partials/footer"); -%>