<%- include("partials/header"); -%>

<div class="container">
    <div class="row">
        <div class="col-6 offset-3">
            <div class="card mt-2">
                <div class="card-header text-center">
                    <h3>User id <%= message.sender %> claims to have found your item</h3>
                </div>
                <div class="card-body">
                    <% let type=message.img.content; %>
                    <% let data=message.img.data; %>
                    <div class="row">
                        <div class="col-3">
                            <img src="data:image/<%=type %>;base64,<%= data.toString('base64') %>" class="img-fluid img-thumbnail">
                        </div>
                        <div class="col-9">
                            <p><%= message.description %></p>
                        </div>
                    </div>

                    <form action="/users/dashboard/report/<%= message._id %>/verify" method="POST">
                        <div class="row mt-2">
                            <div class="col-3 offset-3">
                                <button class="btn btn-primary" type="submit" name="verify">Verfiy</button>
                            </div>
                            <div class="col-3">
                                <a role="button" class="btn btn-primary" href="/users/dashboard/report/<%= message._id %>/invalid">Invalid</a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include("partials/footer"); -%>