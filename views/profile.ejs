<%- include("partials/header") -%>

<div class="container">
    <div class="row">
        <div class="col-6">
            <div class="card mt-5 mb-2">
                <div class="card-header text-center">
                    <h3><%=user.username %>'s Profile</h3>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-sm-3"><p class="mb-0">Username</p></div>
                        <div class="col-sm-9"><p class="mb-0"><%= user.username %></p></div>
                    </div>
                    <hr>
                    <div class="row">
                        <div class="col-sm-3"><p class="mb-0">Email</p></div>
                        <div class="col-sm-9"><p class="mb-0"><%= user.email %></p></div>
                    </div>
                    <hr>
                    <div class="row">
                        <div class="col-sm-3"><p class="mb-0">Contact</p></div>
                        <div class="col-sm-9"><p class="mb-0"><%= user.contact %></p></div>
                    </div>
                    
                </div>
            </div>
        </div>

        <div class="col-6">
            <div class="card mt-5 mb-2">
                <div class="card-header text-center">
                    <h3>List of Lost Items</h3>
                </div>

                <div class="card-body">
                    <form>
                        <div class="row">
                            <div class="col-3">
                                Sno
                            </div>
                            <div class="col-3">
                                Item 
                            </div>
                            <div class="col-3">
                                <a class="btn btn-primary" href="#" role="button">Details</a>
                            </div>
                            <div class="col-3">
                                <button class="btn btn-primary" type="submit" name="button">Delete</button>
                            </div>
                        </div>
                    </form>
                    <hr>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include("partials/footer"); -%>