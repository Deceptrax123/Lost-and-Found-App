<%- include("partials/app_header"); -%>

<div class="container">
    <div class="row">
        <div class="col-6">
            <div class="card mt-4">
                <div class="card-header text-center">
                    <h3>Contact Details</h3>
                </div>

                <div class="card-body">
                    <div class="row">
                        <div class="col-12">
                            <p><b>Owner Details</b></p>
                        </div>
                        <hr>
                    </div>
                    <div class="row">
                        <div class="col-3">
                            <p><b>Username : </b></p>
                        </div>
                        <div class="col-9">
                            <p><%= owner.username %></p>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-3">
                            <p><b>Email : </b></p>
                        </div>
                        <div class="col-9">
                            <p><%= owner.email %></p>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-3">
                            <p><b>Mobile : </b></p>
                        </div>
                        <div class="col-9">
                            <p><%= owner.contact %></p>
                        </div>
                    </div>
                    <hr>
                    <div class="row">
                        <div class="col-12">
                            <p><b>Finder Details</b></p>
                            <hr>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-3">
                            <p><b>Username : </b></p>
                        </div>
                        <div class="col-9">
                            <p><%= finder.username %></p>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-3">
                            <p><b>Email : </b></p>
                        </div>
                        <div class="col-9">
                            <p><%= finder.email %></p>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-3">
                            <p><b>Mobile : </b></p>
                        </div>
                        <div class="col-9">
                            <p><%= finder.contact %></p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    
        <div class="col-6">
            <div class="card mt-4">
                <% if(preferences===null) { %>
                    <div class="card-header text-center">
                        <h3>No preference set</h3>
                    </div>
                    <% if(currentUser===owner.username){ %>
                        <div class="card-body">
                            <div class="col-12 text-center">
                                <a href="/users/dashboard/session/<%=session._id %>/<%=session.item_id %>/preference" class="btn" role="button">Set Preference</a>
                            </div>
                        </div>
                    <% } %>
                <% } else { %>
                    <div class="card-header text-center">
                        <h3>Preferences</h3>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-4">
                                <p><b>Delivery Date : </b></p>
                            </div>
                            <div class="col-8">
                                <p><%= preferences.deliveryDate %></p>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-4">
                                <p><b>Instructions : </b></p>
                            </div>
                            <div class="col-8">
                                <p><%= preferences.mode %></p>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-4">
                                <p><b>From Time : </b></p>
                            </div>
                            <div class="col-8">
                                <p><%= preferences.fromTime %></p>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-4">
                                <p><b>To Time : </b></p>
                            </div>
                            <div class="col-8">
                                <p><%= preferences.toTime %></p>
                            </div>
                        </div>
                <% } %>
                        <div class="row mt-4">
                            <div class="col-4">
                                <form action="/users/dashboard/session/<%=session._id %>/<%=session.item_id %>/found" method="POST">
                                    <button class="btn btn-primary" type="submit" name="found" value="null">Item Recieved</button>
                                </form>
                            </div>
                            <div class="col-4">
                                <form action="/users/dashboard/session/<%= session._id %>/<%= session.item_id %>/not_item" method="POST">
                                    <button class="btn" type="submit" name="notItem">Not Your Item?</button>
                                </form>
                            </div>
                            <% if(terminate===1){ %>
                                <div class="col-4">
                                    <form action="/users/dashboard/session/<%= session._id %>/<%= session.item_id %>/terminate" method="POST">
                                        <button class="btn" type="submit" name="terminate">End</button>
                                    </form>
                                </div>
                            <% } %>
                        </div>
                    </div>
            </div>
        </div>
    </div>
</div>

<%- include("partials/footer"); -%>