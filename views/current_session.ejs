<%- include("partials/header"); -%>

<div class="container">
    <div class="row">
        <div class="col-6">
            <div class="card mt-4">
                <div class="card-header text-center">
                    <h3>Contact Details</h3>
                </div>

                <div class="card-body">
                    <div class="row">
                        <div class="col-12">
                            <p><b>Owner Details</b></p>
                        </div>
                        <hr>
                    </div>
                    <div class="row">
                        <div class="col-3">
                            <p><b>Username : </b></p>
                        </div>
                        <div class="col-9">
                            <p><%= owner.username %></p>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-3">
                            <p><b>Email : </b></p>
                        </div>
                        <div class="col-9">
                            <p><%= owner.email %></p>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-3">
                            <p><b>Mobile : </b></p>
                        </div>
                        <div class="col-9">
                            <p><%= owner.contact %></p>
                        </div>
                    </div>
                    <hr>
                    <div class="row">
                        <div class="col-12">
                            <p><b>Finder Details</b></p>
                            <hr>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-3">
                            <p><b>Username : </b></p>
                        </div>
                        <div class="col-9">
                            <p><%= finder.username %></p>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-3">
                            <p><b>Email : </b></p>
                        </div>
                        <div class="col-9">
                            <p><%= finder.email %></p>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-3">
                            <p><b>Mobile : </b></p>
                        </div>
                        <div class="col-9">
                            <p><%= finder.contact %></p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include("partials/footer"); -%>