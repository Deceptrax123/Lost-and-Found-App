<%- include("partials/header"); -%>

<div class="container">
    <div class="row">
        <% for(let i=0;i<items.length;i++){ %>
            <% let type=items[i].img.content; %>
            <% let data=items[i].img.data; %>

            <div class="col-3">
                <div class="card mt-2 mb-2">
                    <img src="data:image/<%=type %>;base64,<%= data.toString('base64') %>" class="card-img-top img-fluid img-thumbnail">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-3">Item Name</div>
                            <div class="col-9"><%= items[i].name %></div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-3">Last Seen</div>
                            <div class="col-9"><%= items[i].place %></div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-3">Date of Losing</div>
                            <div class="col-9"><%= items[i].date %></div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-3">Category</div>
                            <div class="col-9"><%= items[i].category %></div>
                        </div>
                    </div>
                </div>
            </div>
        <%}%>
    </div>
</div>

<%- include("partials/footer"); -%>